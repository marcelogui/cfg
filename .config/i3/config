assign [class="Postman"] number $ws4
assign [class="Mysql-workbench-bin"] number $ws4


# Workspace 5 - Work
# Workspace 6 - Others
# Workspace 7 - Others 
# Workspace 8 - Notes

# Worspace 9 - Entertainment
for_window [class="Spotify"] move to workspace $ws9

# Floating windows
